<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#121212"> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DroidStrap Modifier"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"/>

    <CheckBox
        android:id="@+id/checkDarkTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тёмная тема (Инверсия UI)"
        android:textColor="#BBBBBB"
        android:textSize="18sp"/>

    <CheckBox
        android:id="@+id/checkFpsBoost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Увеличение ФПС (Flat Materials)"
        android:textColor="#BBBBBB"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnLaunch"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:text="ЗАПУСТИТЬ МОД"
        android:backgroundTint="#1E88E5"
        android:textColor="#FFFFFF"/>

</LinearLayout>

